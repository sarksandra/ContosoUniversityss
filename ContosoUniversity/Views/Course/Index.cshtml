@model IEnumerable<ContosoUniversity.Models.Course>
@{
    ViewData["Title"] = "Course";
}
<h1>Course</h1>
<p>
    <a asp-action="Create">Create a new course</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> 
                @Html.DisplayNameFor(model => model.CourseID)
            </th>
            <th> 
                @Html.DisplayNameFor(model => model.Title) 
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Credits)
                </th>

            <th>Available actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => course.CourseID) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => course.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => course.Credits)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.CourseID">Edit </a>
                    <a asp-action="DetailsDelete" asp-route-id="@course.CourseID">Delete </a>
                    <a asp-action="Clone" asp-route-id="@course.CourseID">Clone</a>

            </tr>
        }
    </tbody>
</table>
