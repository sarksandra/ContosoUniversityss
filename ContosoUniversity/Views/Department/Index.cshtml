@model IEnumerable<ContosoUniversity.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Department Index</h1>

<p>
    <a asp-action="Create">Make a new department</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.DepartmentDog)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Budget)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Administrator)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.RowVersion)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => department.DepartmentDog)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => department.Budget)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => department.Administrator.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => department.RowVersion)
                </td>
                <td colspan="2">
                    <a asp-action="Edit" asp-route-id="@department.DepartmentID" class="btn btn-secondary">Edit</a>
                    <a asp-action="Edit Adminstrator" asp-route-id="@department.DepartmentID" class="btn btn-secondary">Edit Adminstrator</a>
                    <a asp-action="BaseOn" asp-route-id="@department.DepartmentID" class="btn btn-secondary">Clone</a>
                    <a asp-action="Delete" asp-route-id="@department.DepartmentID" class="btn btn-secondary">Delete</a>
                    <a asp-action="Details" asp-route-id="@department.DepartmentID" class="btn btn-secondary">Details</a>
                    <a asp-action="BaseOn" asp-route-id="@department.DepartmentID" class="btn btn-dark">Base On </a>
                       
                    
                </td>
            </tr>
        }
    </tbody>
</table>{
}
